<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/ani_scene2">


    <ImageView
        android:id="@+id/p1"
        android:layout_width="92dp"
        android:layout_height="148dp"
        android:src="@drawable/icon36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/box"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon32"
        android:transformPivotX="28dp"
        android:transformPivotY="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/p2"
        android:layout_width="92dp"
        android:layout_height="148dp"
        android:src="@drawable/icon37"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/ball"
        android:layout_width="112dp"
        android:layout_height="154dp"
        android:adjustViewBounds="true"
        android:src="@drawable/icon33"
        android:transformPivotX="56dp"
        android:transformPivotY="154dp"
        app:layout_constraintBottom_toTopOf="@id/box"
        app:layout_constraintLeft_toLeftOf="@id/box"
        app:layout_constraintRight_toRightOf="@id/box" />

    <ImageView
        android:id="@+id/ball2"
        android:layout_width="112dp"
        android:layout_height="154dp"
        android:adjustViewBounds="true"
        android:src="@drawable/icon33"
        android:transformPivotX="56dp"
        android:transformPivotY="154dp"
        app:layout_constraintBottom_toTopOf="@id/box"
        app:layout_constraintLeft_toLeftOf="@id/box"
        app:layout_constraintRight_toRightOf="@id/box" />

    <ImageView
        android:id="@+id/topperson"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/icon34"
        app:layout_constraintBottom_toBottomOf="@id/box"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/box" />

</androidx.constraintlayout.motion.widget.MotionLayout>