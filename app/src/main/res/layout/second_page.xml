<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:elevation="@dimen/ksl_dp_16"
    android:layout_height="match_parent">

    <View
        android:id="@+id/topView2"
        android:layout_width="0dp"
        android:layout_height="@dimen/ksl_dp_160"
        android:layout_marginHorizontal="@dimen/ksl_dp_20"
        android:layout_marginVertical="@dimen/ksl_dp_25"
        android:background="@drawable/top_right_round_50"
        android:elevation="@dimen/ksl_dp_10"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/topView3"
        android:layout_width="0dp"
        android:layout_height="@dimen/ksl_dp_100"
        android:layout_marginHorizontal="@dimen/ksl_dp_20"
        android:layout_marginTop="@dimen/ksl_dp_20"
        android:background="@drawable/top_round_10"
        android:elevation="@dimen/ksl_dp_10"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topView2" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcList2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/ksl_dp_20"
        android:paddingLeft="@dimen/ksl_dp_12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topView3" />


</androidx.constraintlayout.widget.ConstraintLayout>
