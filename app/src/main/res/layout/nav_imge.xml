<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/topDot"
        android:layout_width="@dimen/ksl_dp_10"
        android:layout_height="@dimen/ksl_dp_10"
        android:layout_marginEnd="@dimen/ksl_dp_8"
        android:background="@drawable/blue_dot"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/navIcon"
        app:layout_constraintEnd_toEndOf="@+id/navIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/leftDot"
        android:layout_width="@dimen/ksl_dp_4"
        android:layout_height="@dimen/ksl_dp_4"
        android:layout_marginTop="@dimen/ksl_dp_10"
        android:layout_marginEnd="-2dp"
        android:background="@drawable/blue_dot"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/navIcon"
        app:layout_constraintTop_toTopOf="@+id/navIcon" />

    <ImageView
        android:id="@+id/rightDot"

        android:layout_width="@dimen/ksl_dp_6"
        android:layout_height="@dimen/ksl_dp_6"
        android:layout_marginStart="-2dp"
        android:layout_marginBottom="@dimen/ksl_dp_8"
        android:background="@drawable/blue_dot"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/navIcon"
        app:layout_constraintStart_toEndOf="@+id/navIcon" />

    <com.wiser.animationlistdemo.list.ani.widget.KsImageView
        android:id="@+id/navIcon"
        android:layout_width="@dimen/ksl_dp_28"
        android:layout_height="@dimen/ksl_dp_28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/cc_book" />

</androidx.constraintlayout.widget.ConstraintLayout>